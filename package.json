{
  "name": "ddionrails",
  "version": "3.3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddionrails/ddionrails.git"
  },
  "license": "AGPL-3.0",
  "author": {
    "name": "Marcel Hebing"
  },
  "dependencies": {
    "@appbaseio/reactivesearch-vue": "^1.0.0-beta.17",
    "@fortawesome/fontawesome-free": "^5.10.1",
    "bootstrap": "^4.3.1",
    "d3": "^3.5.17",
    "datatables.net-bs4": "1.10.19",
    "datatables.net-buttons-bs4": "^1.5.6",
    "datatables.net-responsive-bs4": "2.2.3",
    "har-validator": "^5.1.3",
    "jquery": "^3.4.1",
    "jquery.fancytree": "^2.31.0",
    "lodash.clone": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "popper.js": "^1.15.0",
    "spinkit": "^1.2.5",
    "vue-router": "^3.0.7"
  },
  "devDependencies": {
    "css-loader": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^5.2.3",
    "file-loader": "^4.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.39.1",
    "webpack-bundle-tracker": "^0.4.2-beta",
    "webpack-cli": "^3.3.6"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build_dev": "webpack --mode=development --config webpack.config.js --watch --debug --devtool source-map",
    "webpack_watch": "webpack --mode=development --config webpack.config.js --watch --debug --devtool source-map",
    "lint": "eslint",
    "format": "eslint --fix"
  },
  "renovate": {
    "baseBranches": [
      "develop"
    ],
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true
    },
    "pipenv": {
      "enabled": true
    },
    "rangeStrategy": "bump",
    "schedule": "before 3am on Monday",
    "statusCheckVerify": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "plugin:vue/essential",
      "google",
      "plugin:security/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "security"
    ],
    "rules": {
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline"
        }
      ],
      "complexity": [
        "error",
        {
          "max": 4
        }
      ]
    }
  }
}
