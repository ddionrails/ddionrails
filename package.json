{
  "name": "ddionrails",
  "version": "4.2.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddionrails/ddionrails.git"
  },
  "license": "AGPL-3.0",
  "author": {
    "name": "Marcel Hebing"
  },
  "dependencies": {
    "@appbaseio/reactivesearch-vue": "1.14.1",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "bootstrap": "^4.6.0",
    "d3": "^6.7.0",
    "datatables.net-bs4": "1.10.24",
    "datatables.net-buttons-bs4": "^1.7.0",
    "datatables.net-responsive-bs4": "2.2.7",
    "har-validator": "^5.1.5",
    "jquery": "^3.6.0",
    "jquery.fancytree": "^2.38.0",
    "minimist": "^1.2.5",
    "popper.js": "^1.16.1",
    "spinkit": "^2.0.1",
    "vue": "^2.6.12",
    "vue-router": "^3.5.1"
  },
  "devDependencies": {
    "cspell": "^5.4.1",
    "css-loader": "^5.2.4",
    "eslint": "^7.26.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jquery": "^1.5.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "prettier": "^2.2.1",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "vue-loader": "^15.9.7",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.37.1",
    "webpack-bundle-tracker": "^0.4.3",
    "webpack-cli": "^4.7.0"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build_dev": "webpack --mode=development --config webpack.config.js --devtool source-map",
    "webpack_watch": "webpack --mode=development --config webpack.config.js --watch --devtool source-map",
    "lint": "eslint",
    "format": "eslint --fix",
    "cspell": "cspell"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "plugin:vue/essential",
      "google",
      "plugin:security/recommended",
      "plugin:jquery/deprecated"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "security",
      "jquery"
    ],
    "rules": {
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline"
        }
      ],
      "complexity": [
        "error",
        {
          "max": 6
        }
      ],
      "indent": [
        "error",
        2,
        {
          "MemberExpression": 1
        }
      ],
      "max-len": [
        "error",
        {
          "code": 90,
          "tabWidth": 4
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": true,
          "classes": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "object-shorthand": [
        "error",
        "always"
      ],
      "wrap-iife": [
        "error",
        "outside"
      ]
    }
  }
}
