{
  "name": "ddionrails",
  "version": "4.2.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddionrails/ddionrails.git"
  },
  "license": "AGPL-3.0",
  "author": {
    "name": "Marcel Hebing"
  },
  "dependencies": {
    "@appbaseio/reactivesearch-vue": "^1.0.0-vue",
    "@fortawesome/fontawesome-free": "^5.12.0",
    "bootstrap": "^4.4.1",
    "d3": "^3.5.17",
    "datatables.net-bs4": "1.10.20",
    "datatables.net-buttons-bs4": "^1.6.1",
    "datatables.net-responsive-bs4": "2.2.3",
    "har-validator": "^5.1.3",
    "jquery": "^3.4.1",
    "jquery.fancytree": "^2.34.0",
    "popper.js": "^1.16.0",
    "spinkit": "^2.0.1",
    "vue": "^2.6.11",
    "vue-router": "^3.1.3"
  },
  "devDependencies": {
    "cspell": "^4.0.44",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue": "^6.1.2",
    "file-loader": "^5.0.2",
    "mini-css-extract-plugin": "^0.8.2",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.2",
    "vue-loader": "^15.8.3",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.5",
    "webpack-bundle-tracker": "^0.4.3",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build_dev": "webpack --mode=development --config webpack.config.js --debug --devtool source-map",
    "webpack_watch": "webpack --mode=development --config webpack.config.js --watch --debug --devtool source-map",
    "lint": "eslint",
    "format": "eslint --fix",
    "cspell": "cspell"
  },
  "renovate": {
    "baseBranches": [
      "develop"
    ],
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true
    },
    "rangeStrategy": "bump",
    "schedule": "before 3am on Monday",
    "statusCheckVerify": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "plugin:vue/essential",
      "google",
      "plugin:security/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "vue",
      "security"
    ],
    "rules": {
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline"
        }
      ],
      "complexity": [
        "error",
        {
          "max": 4
        }
      ]
    }
  }
}
